<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-md-4">
            <img src="/public/images/{{book.cover}}" alt="" class="img-fluid" style="width:330px;height:300px;">
        </div>
        <div class="col-md-8">
            <h2>{{book.title}}</h2>
            <ul class="bookInfo">
                <li>Category: {{book.category}}</li><br>
                <li>Author: {{book.author}}</li><br>
                <li>Publisher: {{book.publisher}}</li><br>
            </ul>
            <br>
            <span>${{book.price}} <br></span>
            <p><br>{{book.description}}</p>

            <form action="/pages/cart/{{book._id}}" method="post">
            <input type="submit" name="submit" value="Add To Cart" class="btn btn-success">
            </form>
                
        </div>
    </div>

</div>